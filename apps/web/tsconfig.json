{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "@generated/*": ["../../packages/generated/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "test/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**/*"
  ],
  "references": [
    {
      "path": "../../packages/adapters"
    },
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/bff"
    },
    {
      "path": "../../packages/generated"
    }
  ]
}
