{
  "name": "template-beta-cloudflare-supabase",
  "version": "0.1.0",
  "private": true,
  "description": "Next.js + OpenNext + Cloudflare Workers + Supabase テンプレート",
  "engines": {
    "node": "22"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm run generate:check && wrangler dev",
    "build": "pnpm run generate && pnpm run build:packages && pnpm run build:web",
    "build:packages": "pnpm --filter './packages/*' build",
    "build:web": "pnpm --filter web build",
    "generate": "pnpm run generate:types && pnpm run generate:client",
    "generate:types": "openapi-typescript openapi/openapi.yaml -o packages/generated/src/types.ts",
    "generate:client": "orval --config orval.config.ts",
    "generate:check": "pnpm run generate && git diff --exit-code packages/generated/ || (echo 'Generated files are out of sync. Run pnpm generate' && exit 1)",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "test": "pnpm --filter '*' test",
    "test:e2e": "pnpm --filter web test:e2e",
    "type-check": "pnpm --filter '*' type-check",
    "clean": "pnpm --filter '*' clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "wrangler": "^3.0.0",
    "openapi-typescript": "^7.0.0",
    "orval": "^6.0.0",
    "@redocly/cli": "^1.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}